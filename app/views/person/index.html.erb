<div class="container">   
  <% if !flash[:notice].blank? %>   
    <div>   
        <%= flash[:notice] %>   
    </div>   
  <% end %>   
    
  <br>   
    
  <%= link_to "New Person", person_new_path %>   
  <br>   
  <br>   
    
  <table border="3">   
    <thead>   
      <tr>   
        <th>Candidate Name</th>   
        <th>Download Link</th>   
        <th>Action</th>   
      </tr>   
    </thead>   
        
    <tbody>   
      <% @person.each do |person| %>   
              
      <tr>   
        <td><%= person.name %></td>   
        <td><%= link_to "Download", person.attachment_url %></td>   
        <td><%= link_to "Delete",  person, method: :delete, confirm: "Are you sure you want to delete #{person.name}?" %></td>   
      </tr>   

      <% end %>   
    </tbody>   
        
  </table>   
</div>  